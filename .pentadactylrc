" Mappings

" Options
" Window title (Vimperator by default)
set titlestring=Foo

" Editor, C-i invokes it in text fields (replaces "It's All Text")
set editor=vim_wrapper.sh

" Command line and search patterns history
set history=10000

" Hide everything, but status bar and numbers in tabs
set go=sn

" Show the tab bar only if more then one tab is open
set showtabline=multitab

" Show destination links in 'status' line, 'command' line
set showstatuslinks=status

" Disable obnoxiously huge auto-completion menu
set au=!
" Show completions and use AwesomeBar (+search plugins)
set complete=sl
"set wildoptions=auto

" Ex commands output in a new tab by default (prefs, addons...)
set newtab=all

" Hilight previous search pattern matches
"set hlsearch ## doesn't work in pentadactyl

" Default search engine is ignored, plugins are used, place yubnub in there and do:
" set ds=yubnub

" its nice to have a comprehensive history of used commands
set history=5000

" use the home row!
set hintkeys="asdfg;lkjh"

" cookies only last for session
set cookielifetime=session
" don't accept 3rd party (e.g. usually tracking) cookies
set cookieaccept=samesite

set mapleader=,

" Mappings
map gb :back<cr>
map gB :forward<cr>  " gf is used to view source..
map <leader>s :stop


colo zenburn


source! ~/.vimperatorrc.local

" vim: set ft=vimperator:

